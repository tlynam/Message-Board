<div class="row">
  <div class="col-sm-12">
    <div class="page-header">
      <h1>
        <%= @post.title %>
        <small> by <%= link_to @post.user.first_name, user_path(@post.user) %></small>
      </h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="well" %>
      <h4>
        <%= @post.body %>
      </h4>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Comments</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Author</th>
              </tr>
            </thead>
            <tbody>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

